@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | 500 Error</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/iconfont.css" rel="stylesheet" />
    <link href="~/css/AdminLTE.css" rel="stylesheet" />
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper" style="min-height:100%;margin-left:0px">
            <section class="content-header">
                <h1>
                    @ViewData["Code"].ToString() Error Page
                </h1>
            </section>
            <section class="content">
                <div class="error-page">
                    <h2 class="headline text-red">@ViewData["Code"].ToString()</h2>
                    <div class="error-content">
                        <h3><i class="fa fa-warning text-red"></i> @ViewData["Msg"].ToString()</h3>
                        <p>
                            @ViewData["Stack"].ToString()
                        </p>
                        <form class="search-form">
                            <div class="input-group">
                                @*<input type="text" name="search" class="form-control" placeholder="Search">*@
                                <div class="input-group-btn">
                                    <button type="button" name="submit" id="login" class="btn btn-danger btn-flat">
                                        登录
                                        <i class="fa fa-send"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
        <div class="control-sidebar-bg"></div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script>
        $(function () {
            $("#login").click(function () {
                window.top.location.href = "/Login/Index";
            });
        });
    </script>
</body>
</html>
