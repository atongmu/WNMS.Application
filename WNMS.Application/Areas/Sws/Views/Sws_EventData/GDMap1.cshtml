        function BmapToAmap(lng, lat) {
            var bpoint = [lng,lat];
            AMap.convertFrom(bpoint, 'baidu', function (status, result) {
                if (result.info === 'ok') {
                    return result.locations[0].lng;
                }
            });
        }
        function BmapToAmap1(lng, lat) {
