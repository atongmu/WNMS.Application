                '<ul><li>1</li><li>2</li><li>3</li><li>4</li></ul>'+
            '</div> '
        function LoadMapRtu() {
            $.post("/Sws/Sws_EventData/LoadGZrtu", {}, function (data) {
                if (data != "[]" && data != "") {
                    
                    var json = JSON.parse(data);
                     console.log(json);
                    var jsonLength = json.length;
                    if (jsonLength > 0) {
