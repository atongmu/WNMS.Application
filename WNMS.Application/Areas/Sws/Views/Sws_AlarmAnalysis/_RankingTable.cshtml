@using WNMS.Model.CustomizedClass
@model IEnumerable<EventRanking>
<table class="table table-striped table-bordered ml15px mr15px" id="User" style="width:calc(100% - 30px)">
    <thead>
        <tr>
            <th data-field="rownumber" width="50px">排名</th>
            <th data-field="StationName">泵房名称</th>
            <th data-sortable="true" data-field="pre">报警总数</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var item in Model)
            {
                var str = "top" + i;
                <tr>

                    @{
                        if (i < 4)
                        {
                            <td class="textCenter" width="50px"><span class="@str">@i</span></td>
                        }
                        else
                        {
                            <td class="textCenter" width="50px"><span class="top-c">@i</span></td>
                        }
                    }
                    <td>@item.StationName</td>
                    <td>@item.Count</td>
                </tr>
                i++;
            }
        }
    </tbody>
</table>