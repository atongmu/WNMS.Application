@using WNMS.Model.DataModels;

@model IEnumerable<SwsValveWith01>
<table class="table table-striped table-bordered" style="border-top:0;border-left:0; border-right:0">
    <thead style="border:0">
        <tr style="border:0">
            <td>@Html.CheckBox("ckTop", false)</td>
            <td>阀门名称</td>
            <td>阀门编号</td>
            <td>开度是否可调</td>
            <td>是否可远程</td>
            <td>操作</td>
        </tr>
    </thead>
    <tbody id="tbodyContent">
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td><input type="radio" name="radio" onclick="GetValveForm(@item.ValveId)" /></td>
                    <td>@item.ValveName</td>
                    <td>@item.ValveNum</td>
                    <td>@(item.IsAdjusted == false ? "否" : "是")</td>
                    <td>@(item.IsRemote == false ? "否" : "是")</td>
                    <td><button onclick="DeleteValve(@item.ValveId)"><i class='ion-close-circled'></i> 删除</button></td>
                </tr>
            }
        }
    </tbody>
</table>