    <script>
        var $h = $(window).height() - 70;
        $(".tab-pane").height($h)

        var _loading = null;
        var index = parent.layer.getFrameIndex(window.name);
        var deviceid =@Model.DeviceId;
        var idflag = @ViewBag.idflag;
        var name = "@ViewBag.imageurl";
        $(function () {
    //          $('#ManufactureDate').datepicker({
    //              autoclose: true,
    //              language: "zh-CN"
    //})
               //图片上传
            var $list = $('#fileList'),
               ratio = window.devicePixelRatio || 1,

               // 缩略图大小
               thumbnailWidth = 100 * ratio,
               thumbnailHeight = 100 * ratio,

               // Web Uploader实例
               uploader;

            // 初始化Web Uploader
            uploader = WebUploader.create({
                formData: {
                    deviceid: idflag,
                },
                // 自动上传。
                auto: false,

                // swf文件路径
                swf: '~/Content/webuploader-0.1.5/Uploader.sw',

                // 文件接收服务端。
                server: '/Sws/Sws_DeviceInfo01/UpLoadImg/1111',

                // 选择文件的按钮。可选。
                // 内部根据当前运行是创建，可能是input元素，也可能是flash.
                pick: '#filePicker',

                // 只允许选择文件，可选。
                accept: {
                    title: 'Images',
                    extensions: 'gif,jpg,jpeg,bmp,png',
                    mimeTypes: 'image/*'
                }
            });

            // 当有文件添加进来的时候
            uploader.on('fileQueued', function (file) {
                var $li = $(
                        '<div id="' + file.id + '" class="file-item thumbnail">' +
                            '<img>' +
                            '<div class="info">' + file.name + '</div>' +
                        '</div>'
                        ),
                    $img = $li.find('img');

                $list.append($li);

                // 创建缩略图
                uploader.makeThumb(file, function (error, src) {
                    if (error) {
                        $img.replaceWith('<span>不能预览</span>');
                        return;
                    }

                    $img.attr('src', src);
                }, thumbnailWidth, thumbnailHeight);
            });

            // 文件上传过程中创建进度条实时显示。
            uploader.on('uploadProgress', function (file, percentage) {
                var $li = $('#' + file.id),
                    $percent = $li.find('.progress span');

                // 避免重复创建
                if (!$percent.length) {
                    $percent = $('<p class="progress"><span></span></p>')
                            .appendTo($li)
                            .find('span');
                }

                $percent.css('width', percentage * 100 + '%');
            });

            // 文件上传成功，给item添加成功class, 用样式标记上传成功。
            uploader.on('uploadSuccess', function (file, response) {
                $('#' + file.id).addClass('upload-state-done');
                name = response._raw;
                $("#ImageURL").val(name);
                layer.msg("上传成功", {
                    offset: 't',
                    anim: 6
                });
            });

            // 文件上传失败，现实上传出错。
            uploader.on('uploadError', function (file) {
                var $li = $('#' + file.id),
                    $error = $li.find('div.error');

                // 避免重复创建
                if (!$error.length) {
                    $error = $('<div class="error"></div>').appendTo($li);
                }

                $error.text('上传失败');
            });

            // 完成上传完了，成功或者失败，先删除进度条。
            uploader.on('uploadComplete', function (file) {
                $('#' + file.id).find('.progress').remove();
            });

            $("#btnUpload").click(function () {
                uploader.upload();
            });
        })
        //function saveForm1() {

        // $("#imageurl").val(name);
        //    //parent.layer.close(index);
        //}
        function execute() {
            if ($("input.error").length > 0) {
                return;
            }
            var baseinfo = JSON.stringify($("#basefrom").serializeObject());
            var requinfo = JSON.stringify($("#deviceTypefrom").serializeObject());

            if ($("input.error").length == 0) {
                _loading = layer.load(1, { shade: false });
                console.time('Calculation Time');
                $.post("/Sws/Sws_DeviceInfo01/SetInfo", {
                    baseinfo: baseinfo, requinfo: requinfo,
                    deviceid:deviceid,idflag:idflag
                }, function (data) {
                    console.timeEnd('Calculation Time');
                    layer.close(_loading);
                    if (data == "ok") {
                        parent.layer.msg("操作成功");
                        parent.layer.close(index);
                        parent.Refresh();
                            // window.parent.Refresh();
                        } else if (data == "has") {
                            layer.alert("该泵房已存在分区");
                        } else {
                            layer.alert("添加失败");
                        }

                })
            }
        }
        function validateForm() {
            $("#basefrom").validate({
                submitHandler: function (form) {
                    execute();
                },
                ignore: "",
                rules: {
                    DeviceNum: {
                        required: true
                        //minlength: 3,
                        //maxlength: 15,
                        //digits: true
                    },
                    StationName: { required: true }

                },
                messages: {
                    DeviceNum: {
                        required: "请输入设备编号"
                        //minlength:"请输入3位数字",
                        //maxlength: "请输入3位数字",
                        //digits: "请输入整数"
                    },
                     StationName:"请选择泵房",

                }
            });
             $("#deviceTypefrom").validate({
                submitHandler: function (form) {
                    //execute();
                },
                ignore: "",
                rules: {
                    PumpNum: {
                        required: true,
                        //minlength: 3,
                        //maxlength: 15,
                        digits: true
                    },
                },
                messages: {
                    PumpNum: {
                        required: "请选择泵数量",
                        //minlength:"请输入3位数字",
                        //maxlength: "请输入3位数字",
                        digits: "请输入整数"
                    },
                }
            });
        }
         //表单提交
        function saveForm() {
            validateForm();
            $("#basefrom").submit();

        }
        $("#PumpNum").change(function () {
            GetGUI();
        })
         $("#DeviceType").change(function () {
            GetGUI();
        })
        function GetGUI() { 
            $.post("/Sws/Sws_DeviceInfo01/GetGUI", {
                DeviceType: $("#DeviceType").val(),
                PumpNum: $("#PumpNum").val()
            }, function (data) {
                    var strhtml = "";
                    $("#Gui").empty();
                    if (data.gui != "") {
                        for (var i = 0; i < data.gui.length; i++) {

                            strhtml += "<option value=" + data.gui[i].num + ">" + data.gui[i].guiname + "</option>";
                        }
                        $("#Gui").append(strhtml);
                    }
            });
        }
        //选中泵房
        function SelectPumpSation() {
            iframe1("二供泵房", "60%", "70%", "/Sws/Sws_DeviceInfo01/StationInfo?type=1");
        }
        function iframe1(title, width, height, url, func) {
            window.parent.layer.open({
                type: 2,
                title: title,
                shadeClose: true,
                shade: 0.7,
                area: [width, height],
                content: url,
                btn: ["提交", "取消"],
                yes: function (index, layero) {
                    parent.window.frames[1].saveForm();
                    //$(parent.$('iframe')[1]).saveForm();
                },
                cancel: function (index) {
                }
            })
        };
        $.fn.serializeObject = function () {
            var o = {};
            var a = this.serializeArray();
            $.each(a, function () {
                if (o[this.name] !== undefined) {
                    if (!o[this.name].push) {
                        o[this.name] = [o[this.name]];
                    }
                    o[this.name].push(this.value || '');
                } else {
                    o[this.name] = this.value || '';
                }
            });
            return o;
        };
        function isNumber(obj) {
            var regPos = /^\d+(\.\d+)?$/; //非负浮点数
            var regNeg = /^(-(([0-9]+\.[0-9]*[1-9][0-9]*)|([0-9]*[1-9][0-9]*\.[0-9]+)|([0-9]*[1-9][0-9]*)))$/; //负浮点数
            if (regPos.test(obj) || regNeg.test(obj)) {
                return true;
            } else {
                return false;

            }
        }
    </script>
