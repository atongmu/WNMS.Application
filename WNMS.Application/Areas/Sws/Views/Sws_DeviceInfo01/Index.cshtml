    <script type="text/javascript">
        var $table;
        var sortor;
        var sortname;
        $(function () {
            //初始化bootstrap-table的内容
            InitMainTable();
            $("#btnSelect").click(function () {
                var temp = {                        //页面大小
                    pageNumber: 1,   //页码
                };
                $table.bootstrapTable('refresh', temp);
            });
            //添加设备
            $("#AddBtn_device").click(function () {
                AddDevice();
            });
            //编辑设备
            $("#EditBtn_device").click(function () {
                EditDevice();
            });
            //删除设备
            $("#DeleteBtn_device").click(function () {
                DeleteDevice();
            });
            //导出数据
            $("#DeviceExport").click(function () {
                DeviceExport();
            });
            //导入数据
            $("#DeviceImport").click(function () {
                DeviceImport();
            });
            //阀门配置
            $("#Btn_Valve").click(function () {
                SettingValve();
            });
        })
        function InitMainTable() {
            //记录页面bootstrap-table全局变量$table，方便应用
            var queryUrl = '/Sws/Sws_DeviceInfo01/LoadInfoList';
            $table = $('#tabledata').bootstrapTable({
                url: queryUrl,                      //请求后台的URL（*）
                method: 'GET',                      //请求方式（*）
                //toolbar: '#toolbar',              //工具按钮用哪个容器
                striped: true,                      //是否显示行间隔色
                cache: false,                       //是否使用缓存，默认为true，所以一般情况下需要设置一下这个属性（*）
                pagination: true,                   //是否显示分页（*）
                sortable: true,                     //是否启用排序
                sortOrder: "asc",                   //排序方式
                sidePagination: "server",           //分页方式：client客户端分页，server服务端分页（*）
                pageNumber: 1,                      //初始化加载第一页，默认第一页,并记录
                pageSize: 15,                     //每页的记录行数（*）
                pageList: [10, 15, 20],        //可供选择的每页的行数（*）
                search: false,                      //是否显示表格搜索
                //strictSearch: true,
                //showColumns: true,                  //是否显示所有的列（选择显示的列）
                showRefresh: false,                  //是否显示刷新按钮
                minimumCountColumns: 2,             //最少允许的列数
                //clickToSelect: true,                //是否启用点击选中行
                height: $(window).height() - 50,      //行高，如果没有设置height属性，表格自动根据记录条数觉得表格高度
                uniqueId: "DeviceId",                     //每一行的唯一标识，一般为主键列
                //showToggle: true,                   //是否显示详细视图和列表视图的切换按钮
                //cardView: false,                    //是否显示详细视图
                //detailView: false,                  //是否显示父子表
                //得到查询的参数
                queryParams: function (params) {
                    //这里的键的名字和控制器的变量名必须一直，这边改动，控制器也需要改成一样的
                    var temp = {
                        pageSize: params.limit,                         //页面大小
                        pageIndex: (params.offset / params.limit) + 1,   //页码
                        //sort: params.sort,      //排序列名
                        sort: params.sort == undefined ? "DeviceId" : params.sort,      //排序列名
                        sortOrder: params.order, //排位命令（desc，asc）
                        deviceName: $("#deviceName").val(),
                    };
                    sortor = params.order;
                    sortname = params.sort == undefined ? "DeviceId" : params.sort;;
                    return temp;
                },
                columns: [{
                    checkbox: true,
                    visible: true
                }, {
                    field: 'StationName',
                    title: '所属泵房',
                    //sortable: true,
                    width: 200
                },
                //{
                //field: 'DeviceId',
                //title: '设备ID',
                //width: 100,
                ////sortable: true
                //},
                {
                    field: 'DeviceName',
                    title: '设备名称',
                    //sortable: true,
                    width: 200
                }, {
                    field: 'DeviceNum',
                    title: '设备编号',
                    width: 100
                    //sortable: true
                }, {
                    field: 'RDeviceID',
                    title: '通讯编号',
                    width: 100
                    //sortable: true
                }, {
                    field: 'PartitionName',
                    title: '分区',
                    //sortable: true
                    width: 130,
                }, {
                    field: 'DeviceTypeName',
                    title: '设备类型',
                    //sortable: true
                }, {
                    field: 'FrequencyName',
                    title: '变频分类',
                    //sortable: true
                }, {
                    field: 'ManufacturerName',
                    title: '厂商',
                    //sortable: true
                }, {
                    field: 'PumpNum',
                    title: '泵数量',
                    //sortable: true
                },  {
                    field: 'ImportDn',
                    title: '进口 DN',
                    //sortable: true
                }, {
                    field: 'ExportDn',
                    title: '出口 DN',
                    //sortable: true
                }, {
                    field: 'ManufactureDate',
                    title: '出厂日期',
                    formatter: function (value, row, index) {
                        return changeDateFormat(value)
                    }
                    //sortable: true
                }
                ],
                responseHandler(res) {
                    // 修改返回
                    return {
                        "rows": JSON.parse(res.rows), //单页查询返回的数据,
                        "total": res.total
                    };
                },
                onLoadSuccess: function (res) {

                },
                onLoadError: function () {
                },
                onDblClickRow: function (row, $element) {
                    var id = row.ID;
                },
            });
        };
        function changeDateFormat(cellval) {
            if (cellval != null) {
                var date = cellval.replace("T", " ");
                return date;
            }
        }
        function Refresh() {
            $table.bootstrapTable('refresh', null);
        }
        //加载添加页面方法
        function AddDevice() {
            iframe("添加设备", "800px", "80%", "/Sws/Sws_DeviceInfo01/AddPage");
        }
        //加载编辑页面方法
        function EditDevice() {
            var row = $("#tabledata").bootstrapTable('getAllSelections');
            if (row.length != 1) {
                layer.msg("请选中一行", {
                    offset: 't',
                    anim: 6
                });
            } else {
                iframe("编辑设备", "800px", "80%", "/Sws/Sws_DeviceInfo01/EditPage/" + row[0].DeviceId);
            }
        }
        //删除方法
        function DeleteDevice() {
            var row = $("#tabledata").bootstrapTable('getAllSelections');
            if (row.length <= 0) {
                layer.msg("请至少选中一行", {
                    offset: 't',
                    anim: 6
                });
            } else {
                var id = "";
                for (i = 0; i < row.length; i++) {
                    id += row[i].DeviceId + ",";
                }
                id = id.substring(0, id.length - 1);
                layer.confirm("确定要删除设备？", {
                    btn: ["确定", "取消"]
                },
                    function () {
                        deleteDevice(id);
                    },
                    function () { }
                );
            }
        }
        //删除
        function deleteDevice(ids) {
            $.post("/Sws/Sws_DeviceInfo01/DeleteList", { id: ids }, function (data) {
                if (data == "ok") {
                    layer.alert("删除成功！");
                    Refresh();
                }
                else {
                    if (data.indexOf("设备") > -1) {
                        layer.alert(data);
                    }
                    else {
                        if (data == "false") {
                            layer.alert("所选所有设备均被占用，无法删除。")
                        }
                        else {
                            layer.alert("设备设备失败！");
                        }
                    }
                }
            });
        }
        //导出数据
        function DeviceExport() {
            window.location.href = "/Sws/Sws_DeviceInfo01/ExportData?deviceName=" + $("#deviceName").val() + "&sort=" + sortname + "" + "&sortOrder=" + sortor + "" + "";
        }
        //导入数据
        function DeviceImport() {
            //$("#upfile").submit();
            var formData = new FormData($("#upfile")[0]);
            $.ajax({
                url: '/Sws/Sws_DeviceInfo01/Import',
                type: 'POST',
                cache: false,
                data: formData,
                processData: false,
                contentType: false
            }).done(function (res) {
                if (res == "ok") {
                    layer.alert("导入成功！");
                    //location.reload()
                    Refresh();
                    removeFile();
                } else
                    if (res == "error") {
                        removeFile();
                        layer.alert("导入失败！");
                    } else
                        if (res == "typeno") {
                            removeFile();
                            layer.alert("文件类型不对！");
                        } else
                            if (res == "not") {
                                removeFile();
                                layer.alert("文件不存在！");
                            } else
                                if (res == "exception") {
                                    removeFile();
                                    layer.alert("请检查数据格式！");
                                } else {
                                    removeFile();
                                    layer.alert(res);
                                }
            });
        }

        //配置设备阀门
        function SettingValve() {
            var row = $("#tabledata").bootstrapTable('getAllSelections');
            if (row.length != 1) {
                layer.alert("请选中一行");
            } else {
                noiframe("阀门配置", "60%", "70%", "/Sws/Sws_DeviceInfo01/AllotValve/" + row[0].DeviceId);
            }
        }

        function removeFile() {
            var file = $('input[name="excelfile"]');
            file.after(file.clone().val(""));
            file.remove();
        }
        //定义layer层
        function iframe(title, width, height, url) {
            layer.open({
                type: 2,
                title: title,
                shadeClose: true,
                shade: 0.7,
                area: [width, height],
                content: url,
                btn: ["提交", "取消"],
                yes: function (index, layero) {
                    window.frames[0].saveForm();
                },
                cancel: function (index) {
                }
            });
        }
        //定义layer层
        function noiframe(title, width, height, url) {
            layer.open({
                type: 2,
                title: title,
                shadeClose: true,
                shade: 0.7,
                area: [width, height],
                content: url,
                yes: function (index, layero) {
                    window.frames[0].saveForm();
                },
                cancel: function (index) {
                }
            });
        }
    </script>
</head>

<body>
