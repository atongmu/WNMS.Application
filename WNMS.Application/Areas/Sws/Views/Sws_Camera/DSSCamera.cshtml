        function LoadStationList() {
            var searchText = $("#selname").val();
            var flag = false;
            $.post("/Sws/Sws_Camera/SearchStationList", { stationName: searchText }, function (res) {
                $("#dataList").empty();

                if (res.data.length > 0) {
                    var appends = "";
                    var States = res.data;
                    for (var i = 0; i < States.length; i++) {

                        var classSate = "";
                        if (States[i].state == "在线") {
