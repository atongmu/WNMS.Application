                                ' <i class="iconfont icon-shexiangtou' + cameraclass + '"></i>' +
                                '</li>';
                            flag = true;
                        }
                        else {
                            appends += ' <li  data-key="' + States[i].StationID + '">' +
                                '<em class="' + classSate + '"></em>' +
                                '<span class="chaochu">' + States[i].StationName + '</span>' +
                                ' <i class="iconfont icon-shexiangtou' + cameraclass + '"></i>' +
                                '</li>';
                        }
                    }
                    $("#dataList").html(appends);
                }
                if (flag == false) {
                    doorid = 0;
                    stationid = 0;
                }
            })

        }

