                                    {
                                        var States = stationSates.ToList();
                                        for (var i = 0; i < States.Count; i++)
                                        {

                                            <li data-key="@States[i].StationID" data-state="@States[i].state">
                                                <em class="iconfont icon-bengfang"></em>
