
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowDetailUser</title>
    <script src="~/js/jquery-1.12.4.min.js"></script>
    <!-- bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/zlw.css">
    <link rel="stylesheet" href="~/css/hyl.css">
    <script src="~/js/bootstrap.min.js"></script>
    <style>
        .card {
            width: 280px;
            height: 100px;
            border: 1px solid #ccc;cursor:pointer;
            border-radius: 3px;margin:5px 7px;float:left
        }
        .card:hover{border-color:#999}

        .r_left {
            height: 100%;
            width: 85px;
            float: left;
        }

        .r_right {
            height: 100%;
            width: 190px;
            float: left;
        }
        .name{font-size:16px;font-weight:bold}
    </style>
</head>
<body>
    <div class="pad10px">
        @{
            IEnumerable<dynamic> list = ViewBag.datalist as IEnumerable<dynamic>;
            if (list.Count() > 0)
            {
                foreach (var item in list)
                {
                    <div class="card">
                        <div class="r_left" style="background:#f5f5f5">
                            <div class="mar10px" style="background:url(@(item.HeadIcon.Replace("\\","/")))no-repeat center;background-size:100%;height:78px">
                               
                            </div> 
                        </div>
                        <div class="r_right pl10px lh25px">
                            <p class="name mt10px ellipsis1" title="@item.Account">@item.Account<p>
                            <p><span>手机号：</span><span>@item.Phone</span></p>
                            <p class="ellipsis1" title="@item.Email"><span>邮箱：</span><span>@item.Email</span></p>
                        </div>
                    </div>
                }
            }
        }
        
    </div>
    <script>
   </script>
</body>
</html>
