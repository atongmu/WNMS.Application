                                    <input type="text" class="form-control" id="Contents" name="Contents" placeholder="请输入内容" value="@Model.Contents" autocomplete="off">
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="Solution">解决方案</label>
                                <div class="form-group ml15px">
                                    <textarea id="Solution" style="height:180px" name="Solution" class="form-control" placeholder="">@Model.Solution</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
